    </div>

  </div>
</div>

{% javascript %}
  (function() {
    let cartCountDiv = document.querySelector(".cart__count");
    fetch('/cart.js').then(response => response.json()).then(data => {
      const cartItemCount = data.item_count;
      cartCountDiv.innerHTML = cartItemCount;
    });

  })()
{% endjavascript %}


{% schema %}
  {
    "name": "Header",
    "tag": "header",
    "class": "s-header",
    "settings": [
      {
        "type": "text",
        "label": "Logo",
        "id": "logo",
        "default": "Sonang Test",
        "placeholder": "Logo"
      }
    ],
    "blocks": [
      {
        "type": "nav",
        "name": "nav",
        "limit": 5,
        "settings": [
          {
            "type": "checkbox",
            "label": "Men",
            "id": "men",
            "default": true
          },
          {
            "type": "checkbox",
            "label": "Women",
            "id": "women",
            "default": true
          },
          {
            "type": "checkbox",
            "label": "Kids",
            "id": "kids",
            "default": true
          },
          {
            "type": "checkbox",
            "label": "Activities",
            "id": "activities",
            "default": true
          }, {
            "type": "checkbox",
            "label": "Explore",
            "id": "explore",
            "default": true
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Header"
      }
    ]
  }
{% endschema %}