            width="36"
            height="36"
            rx="2"
            fill="black" />
          <rect
            x="8.39844"
            y="17.5449"
            width="15.0891"
            height="1.37143"
            fill="white" />
          <rect
            x="8.39844"
            y="10.7998"
            width="19.2"
            height="1.37143"
            fill="white" />
          <rect
            x="8.39844"
            y="24.292"
            width="9.94629"
            height="1.37143"
            fill="white" />
        </svg>


      </div>
    </div>

    <div class="siteLogo">
      <a href="/">
        {{ section.settings.logo }}
