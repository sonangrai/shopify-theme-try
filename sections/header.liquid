{{ 'header.css' | asset_url | stylesheet_tag }}

<div class="container">

  <div class="header__flex">

    <div class="header__nav">
      <nav class="s-nav">
        <ul class="s-nav__list">
          {% for block in section.blocks %}

            {% case block.type %}

              {% when 'nav' %}

                {% if block.settings.men %}
                  <li>
                    <a class="s-nav__item" href="#!">Men</a>
                  </li>
                {% endif %}

                {% if block.settings.women %}
                  <li>
                    <a class="s-nav__item" href="#!">Women</a>
                  </li>
                {% endif %}

                {% if block.settings.kids %}
                  <li>
                    <a class="s-nav__item" href="#!">Kids</a>
                  </li>
                {% endif %}

                {% if block.settings.activities %}
                  <li>
                    <a class="s-nav__item" href="#!">Activities</a>
                  </li>
                {% endif %}

                {% if block.settings.explore %}
                  <li>
                    <a class="s-nav__item" href="/collections">Explore</a>
                  </li>
                {% endif %}

            {% endcase %}
          {% endfor %}
        </ul>
      </nav>

      <div class="hamburger">
        <svg
          width="36"
          height="36"
          viewBox="0 0 36 36"
          fill="none"
          xmlns="http://www.w3.org/2000/svg">
